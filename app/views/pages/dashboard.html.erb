<div class="container font-db">
  <div class="first-wrapper">

    <div class="style-db layout-db-1">
      <div class="container d-flex align-items-center justify-content-between">
        <div>
          <h1>Your Info</h1>
            <% if user_signed_in? %>
            <p class="border-bottom p-2">First name: <%= current_user.first_name %></p>
            <p class="border-bottom p-2">Last name: <%= current_user.last_name %></p>
            <p class="border-bottom p-2">Email: <%= current_user.email %></p>
            <% end %>
            <a href="<%= dashboard_path %>" class="btn btn-dark text-white w-100 mt-2" style="text-decoration: none;">
            Edit profile
            </a>
        </div>
        <div>
          <img class="icon-db" src="https://static-00.iconduck.com/assets.00/robot-icon-2048x2048-s4gzvofh.png" alt="icon-user">
        </div>
      </div>
    </div>

    <div class="style-db layout-db-1">
      <h1>Activity</h1>
        <%# add some counting mechanics %>
        <div class="activity-wrapper">
          <div class="style-activity-db">
            Active bookings  10
          </div>

          <div class="style-activity-db">
            Robot owned 3
          </div>

          <div class="style-activity-db">
            Money made:
          </div>

          <div class="style-activity-db">
            Money spent:
          </div>
        </div>

    </div>

  </div>

  <div class="second-wrapper">

    <div class="style-db layout-db-2">
      <h1>Your Bookings</h1>
      <%= render "shared/table", user_bookings: @user_bookings %>

      <a href="<%= robots_path %>" class="btn btn-dark text-white mt-5" style="text-decoration: none;">
        + Book Another Robot
      </a>


    </div>

    <div class="style-db layout-db-2">
      <h1>Your Robots</h1>
      <% @user_bookings.each do |booking| %>
        <p class="border-bottom p-2"><%= booking.comment %></p>
      <% end %>
        <%# create robots form %>
      <a href="<%= dashboard_path %>" class="btn btn-dark text-white mt-5" style="text-decoration: none;">
        + Add Robot to your Garage
      </a>
    </div>

  </div>
</div>
